mixin button(color, url, text)
  // BUTTON
  table(width="100%" border="0" cellspacing="0" cellpadding="0")
    tr
      td(align="center" style="padding: 15px 0px 0px 0px;")
        table(width="100%" border="0" cellspacing="0" cellpadding="0")
          tr
            td(align="center")
              a(class="body-text" href="#{url}" target="_blank" style="font-size: 13px; font-family: Helvetica, Arial, sans-serif; font-weight: normal; color: #ffffff; text-decoration: none; text-transform: uppercase; letter-spacing: 2px; background-color: #{color}; border-top: 5px solid #{color}; border-bottom: 5px solid #{color}; border-left: 20px solid #{color}; border-right: 20px solid #{color}; display: inline-block; border-radius: 20px;") #{text}

mixin salutation(color, lastName)
  tr
    td(class="padding" align="left" style="padding: 22px 0px 22px 0px; font-family: Helvetica, Arial, sans-serif; color: #{color}; font-weight: bold; font-size: 21px; line-height: 28px;" )
      | Dear Dr. #{lastName},


mixin graf(text)
  tr
    td(class="padding" align="left" style="padding: 0px 0px 15px 0px; font-family: Helvetica, Arial, sans-serif; color: #717171; font-weight: normal; font-size: 16px; line-height: 26px;" )
      | #{text}

mixin exam(color, textColor, date, location, firstDeadline, lastDeadline, link, buttonColor, buttonText)
  tr
    td(class="padding" align="center" style="padding: 0px 0px 40px 0px;")
      table(class="wrapper" border="0" cellpadding="0" cellspacing="0" width="320" style="border: 1px solid #{color}; border-radius: 4px; border-collapse: separate !important;")
        tr
          td(align="center" width="300" style="padding: 6px 0px 6px 0px; font-family: Helvetica, Arial, sans-serif; color: #{textColor}; font-weight: bold; font-size: 16px; line-height: 28px;" bgcolor=color)
            | #{date} &bull; #{location}
        tr
          td(align="center" width="300" style="padding: 30px 0px 0px 0px; font-family: Helvetica, Arial, sans-serif; color: #a2a2a2; font-weight: light; font-size: 13px; line-height: 18px; text-transform: uppercase; letter-spacing: 1px")
            | First application deadline
        tr
          td(align="center" width="300" style="padding: 0px 0px 10px 0px; font-family: Helvetica, Arial, sans-serif; color: #{textColor}; font-weight: normal; font-size: 16px; line-height: 26px;")
            | #{firstDeadline}
        tr
          td(align="center" width="300" style="padding: 10px 0px 0px 0px; font-family: Helvetica, Arial, sans-serif; color: #a2a2a2; font-weight: light; font-size: 13px; line-height: 18px; text-transform: uppercase; letter-spacing: 1px")
            | Final application deadline
        tr
          td(align="center" width="300" style="font-family: Helvetica, Arial, sans-serif; color: #{textColor}; font-weight: normal; font-size: 16px; line-height: 26px;")
            | #{lastDeadline}
        tr
          td(align="center" width="300" style="padding: 10px 0px 20px 0px; font-family: Helvetica, Arial, sans-serif; color: #[color]; font-weight: normal; font-size: 16px; line-height: 26px;")
            +button(buttonColor, link, buttonText)
  
